@page
@model CRUD.Pages_Premiums.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Premiums</h1>

<p>
    <a asp-page="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Premium[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Premium[0].StarDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Premium[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Premium[0].Student)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Premium) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StarDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
